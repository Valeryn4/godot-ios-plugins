#!/usr/bin/env python

Import("env")
Import("env_modules")

env_spotlight = env_modules.Clone()

# (OSX) Enable module support
env_spotlight.Append(CCFLAGS=["-fmodules", "-fcxx-modules"])

# (OSX) Build as separate static library
modules_sources = []
env_spotlight.add_source_files(modules_sources, "*.mm")
env_spotlight.add_source_files(modules_sources, "*.cpp")